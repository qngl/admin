{
  "name": "admin-template",
  "version": "1.0.0",
  "description": "admin-template",
  "author": "eisnow@126.com",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all --parallel dev test:watch",
    "dev": "cross-env BABEL_ENV=development webpack-dev-server --inline --progress --config build/webpack.dev.conf.js",
    "dist:clean": "rimraf dist/",
    "dist:create": "mkdirp dist/",
    "predist": "npm-run-all dist:clean dist:create",
    "dist": "cross-env NODE_ENV=production env_config=prod node build/build.js",
    "postdist": "cd dist/ && bestzip ./out.zip *",
    "fix": "npm-run-all fix:*",
    "fix:eslint": "eslint --fix --ext .js,.vue src",
    "fix:stylelint": "stylelint \"src/**/*.(css|scss|vue)\" --fix",
    "test": "jest --coverage --colors",
    "test:ci": "jest --ci --coverage --verbose --forceExit --detectOpenHandles",
    "test:watch": "jest --watch --colors",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --watch --bail --colors --runInBand",
    "svgo": "svgo -f src/icons/svg --config=src/icons/svgo.yml"
  },
  "keywords": [
    "admin-template"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qngl/admin.git"
  },
  "dependencies": {
    "axios": "0.18.0",
    "clipboard": "2.0.4",
    "codemirror": "5.44.0",
    "connect": "3.6.6",
    "driver.js": "0.9.5",
    "dropzone": "5.5.1",
    "echarts": "4.1.0",
    "element-ui": "2.6.1",
    "file-saver": "2.0.1",
    "font-awesome": "4.7.0",
    "js-cookie": "2.2.0",
    "jsonlint": "1.6.3",
    "jszip": "3.2.0",
    "lodash": "4.17.11",
    "mockjs": "1.0.1-beta3",
    "normalize.css": "8.0.1",
    "nprogress": "0.2.0",
    "screenfull": "4.0.1",
    "showdown": "1.9.1",
    "sortablejs": "1.8.4",
    "vue": "2.6.9",
    "vue-count-to": "1.0.13",
    "vue-i18n": "8.9.0",
    "vue-router": "3.0.2",
    "vue-splitpane": "1.0.4",
    "vuedraggable": "2.19.2",
    "vuex": "3.1.0",
    "xlsx": "0.14.1"
  },
  "devDependencies": {
    "@vue/test-utils": "1.0.0-beta.29",
    "autoprefixer": "9.5.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "10.0.1",
    "babel-helper-vue-jsx-merge-props": "2.0.3",
    "babel-jest": "24.5.0",
    "babel-loader": "7.1.5",
    "babel-plugin-dynamic-import-node": "2.2.0",
    "babel-plugin-dynamic-import-webpack": "^1.1.0",
    "babel-plugin-syntax-jsx": "6.18.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-plugin-transform-vue-jsx": "3.7.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-stage-2": "6.24.1",
    "bestzip": "^2.1.2",
    "chalk": "2.4.2",
    "copy-webpack-plugin": "5.0.1",
    "cross-env": "5.2.0",
    "css-loader": "2.1.1",
    "eslint": "5.15.2",
    "eslint-friendly-formatter": "4.0.1",
    "eslint-loader": "2.1.2",
    "eslint-plugin-vue": "5.2.2",
    "file-loader": "3.0.1",
    "friendly-errors-webpack-plugin": "1.7.0",
    "hash-sum": "1.0.2",
    "html-webpack-include-assets-plugin": "1.0.7",
    "html-webpack-plugin": "^4.0.0-beta.5",
    "http-server": "0.11.1",
    "husky": "1.3.1",
    "jest": "24.5.0",
    "jest-serializer-vue": "2.0.2",
    "lint-staged": "8.1.5",
    "mini-css-extract-plugin": "0.5.0",
    "mkdirp": "0.5.1",
    "node-notifier": "5.4.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "4.1.5",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "ora": "3.2.0",
    "portfinder": "1.0.20",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "postcss-url": "8.0.0",
    "regenerator-runtime": "0.13.1",
    "rimraf": "2.6.3",
    "sass-loader": "7.1.0",
    "script-ext-html-webpack-plugin": "2.1.3",
    "script-loader": "0.7.2",
    "semver": "5.6.0",
    "serve-static": "1.13.2",
    "shelljs": "0.8.3",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "18.2.0",
    "stylelint-order": "2.1.0",
    "stylelint-scss": "3.5.4",
    "svg-sprite-loader": "4.1.3",
    "svgo": "1.2.0",
    "uglifyjs-webpack-plugin": "2.1.2",
    "url-loader": "1.1.2",
    "vue-jest": "3.0.4",
    "vue-loader": "15.7.0",
    "vue-style-loader": "4.1.2",
    "vue-template-compiler": "2.6.9",
    "webpack": "4.29.6",
    "webpack-bundle-analyzer": "3.1.0",
    "webpack-cli": "3.3.0",
    "webpack-dev-server": "3.2.1",
    "webpack-merge": "4.2.1",
    "webpack-replace-loader": "1.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run fix",
      "pre-push": "npm test"
    }
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      ".+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,vue}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/test/",
      "<rootDir>/config/",
      "<rootDir>/static/",
      "<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
